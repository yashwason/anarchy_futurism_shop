<header>
    <% if(errMsgs){ %>
    <section class="header-flash error">
        <% errMsgs.forEach((msg) => { %>
        <p><%= msg %></p>
        <% }); %>
    </section>
    <% } %>
    <% if(successMsgs){ %>
    <section class="header-flash success">
        <% successMsgs.forEach((msg) => { %>
        <p><%= msg %></p>
        <% }); %>
    </section>
    <% } %>

    <section id="logo-wrapper">
        <a href="/">
            <picture>
                <source media="(max-width: 630px)" srcset="/images/common/logos/white-logo.svg">
                <img src="/images/common/logos/black-logo.svg" alt="Logo">
            </picture>
        </a>
    </section>
    <section id="page-heading">
        <h1><%= pageHeading %></h1>
    </section>
    <section id="user-nav-wrapper">
        <nav>
            <div>
                <% if(userIsLoggedIn){ %>
                <span><i class="far fa-user"></i></span>
                <section class="dropdown">
                    <a href="/user/orders">Your Orders <i class="fas fa-tags"></i></a>
                    <a href="/user/logout">Logout <i class="fas fa-sign-out-alt"></i></a>
                </section>
                <% } else{ %>
                <a href="/user/signin"><i class="far fa-user"></i></a>
                <% } %>
            </div>
            <a href="/wishlist"><i class="far fa-heart"></i></a>
            <a href="/cart"><i class="fas fa-shopping-cart"></i></a>
        </nav>
    </section>
    <section id="burger-menu-wrapper">
        <img src="/images/common/icons/burger.png" alt="Menu">
    </section>
</header>